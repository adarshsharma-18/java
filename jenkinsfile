pipeline {
    agent any

    environment {
        MY_ENV_VAR = 'example_value'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/jott0/java.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Compiling Java source...'
    
                sh 'javac Main.java'
            }
        }

        stage('Run') {
            steps {
                echo 'Running Java application...'
                sh 'java Main'
            }
        }
    }
}
