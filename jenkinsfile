pipeline {
    agent any

    environment {
        MY_ENV_VAR = 'example_value'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/jott0/java.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                sh 'javac calc.java'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
            }
        }

        stage('Cleanup') {
            steps {
                echo 'Cleaning up...'
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
            echo 'Output from Java file:'
            sh 'java -cp build Main' // Replace 'Main' with your actual class name if different
        }
        success {
            echo 'Pipeline finished successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
